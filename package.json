{
  "name": "zhcj-web-assistant",
  "version": "1.0.0",
  "description": "智能网页助手 - 可嵌入任何网站的AI聊天组件",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@10.11.1",
  "scripts": {
    "dev": "trap 'killall -q pnpm vite nodemon ts-node 2>/dev/null; exit' INT; pnpm -r --parallel dev",
    "build": "pnpm -r build",
    "build:client": "pnpm --filter client build",
    "build:server": "pnpm --filter server build",
    "dev:client": "pnpm --filter client dev",
    "dev:server": "pnpm --filter server dev",
    "start:server": "pnpm --filter server start",
    "clean": "pnpm -r clean && rm -rf node_modules",
    "cleanup": "killall -q pnpm vite nodemon ts-node || echo '✅ 开发进程已清理'",
    "install:all": "pnpm install",
    "type-check": "pnpm -r type-check"
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@types/node": "^20.10.6",
    "typescript": "^5.3.3"
  },
  "keywords": [
    "web-assistant",
    "ai",
    "chat",
    "widget",
    "websocket",
    "preact"
  ],
  "author": "Xiaokebuyu",
  "license": "MIT"
}
